{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "my-pod"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "my-pod": "true"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "my-pod": "true"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "main",
                        "image": "localhost:30081/library/busybox:latest",
                        "command": [
                            "/bin/sh", "-c",
                            "while true; do sleep 10; done"
                        ]
                    }
                ]
            }
        }
    }
}
