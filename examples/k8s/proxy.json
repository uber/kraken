---
{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "kraken-proxy",
        "labels": {
            "kraken": "true"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "kraken-app": "proxy"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "kraken": "true",
                    "kraken-app": "proxy"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "main",
                        "image": "gcr.io/uber-container-tools/kraken-proxy:v0.1.0-25-ga61fa4f",
                        "command": [
                            "/usr/bin/kraken-proxy",
                            "--config=/etc/config/proxy.yaml",
                            "--port=80"
                        ],
                        "volumeMounts": [
                            {
                                "name": "config",
                                "mountPath": "/etc/config"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "name": "config",
                        "configMap": { "name": "kraken" }
                    }
                ]
            }
        }
    }
}
---
{
    "kind": "Service",
    "apiVersion": "v1",
    "metadata": {
        "name": "kraken-proxy"
    },
    "spec": {
        "selector": {
            "kraken-app": "proxy"
        },
        "ports": [
            {
                "protocol": "TCP",
                "port": 80,
                "targetPort": 80
            }
        ]
    }
}
---
