extends: base.yaml

registry:
  docker:
    version: 0.1
    log:
      level: error
    http:
      net: tcp
      addr: 0.0.0.0:8991

scheduler:
  connstate:
    blacklist_duration: 5s

peer_id_factory: random

tracker:
  hashring:
    max_replica: 2
  cluster:
    hosts:
      static: {trackers}

build_index:
  hosts:
    static: {build_indexes}

tls:
  name: kraken
  ca:
    disabled: true
    cert:
      path: /etc/kraken/tls/ca/server.crt
    key:
      path: /etc/kraken/tls/ca/server.key
    passphrase:
      path: /etc/kraken/tls/ca/passphrase
  client:
    cert:
      path: /etc/kraken/tls/client/client.crt
    key:
      path: /etc/kraken/tls/client/client.key
    passphrase:
      path: /etc/kraken/tls/client/passphrase
